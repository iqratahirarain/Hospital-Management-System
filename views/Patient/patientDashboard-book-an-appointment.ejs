<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Patient Dashboard</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" type="text/css">
    <link href="/vendor/boxicons/css/boxicons.css" rel="stylesheet" type="text/css">
    <link href="/vendor/remixicon/remixicon.css" rel="stylesheet" type="text/css">

    <!-- Template Main CSS File -->
    <link href="/css/style.css" rel="stylesheet" type="text/css">
</head>


<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <i class="bi bi-list toggle-sidebar-btn"></i>
            <a href="/patient-dashboard" class="logo d-flex align-items-center mx-3">
                <span>Hospital</span>
            </a>
        </div>
        <!-- End Logo -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">


                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <!-- <img src="" alt="Profile Picture" class="rounded-circle"> -->
                        <span class="d-none d-md-block dropdown-toggle ps-2">
                            <%=full_name%>
                        </span>
                    </a>
                    <!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>
                                <%=full_name%>
                            </h6>
                            <span><%=role%></span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="/patient-profile">
                                <i class="bi bi-person"></i>
                                <span>My Profile</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>



                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="/patient-logout">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Log-Out</span>
                            </a>
                        </li>

                    </ul>
                    <!-- End Profile Dropdown Items -->
                </li>
                <!-- End Profile Nav -->

            </ul>
        </nav>
        <!-- End Icons Navigation -->

    </header>
    <!-- End Header -->

    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <!-- Dashboard Nav -->
            <li class="nav-item">
                <a class="nav-link active" href="/patient-dashboard">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link active" href="/patient-dashboard-book-an-appointment">
                    <i class="bi bi-grid"></i>
                    <span>Book an Appointment</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="/patient-logout">
                    <i class="bi bi-box-arrow-left"></i>
                    <span>Logout</span>
                </a>
            </li>
            <!-- End Logout Page Nav -->
        </ul>

    </aside>
    <!-- End Sidebar-->

    <!-- ======= Main ======= -->
    <main id="main" class="main">

        <div class="pagetitle">
                
                <h1>Patient Dashboard</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/patient-dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/patient-dashboard-book-an-appointment">Book-an-appointment</a></li>
                    </ol>
                </nav>
        </div>

        <div>
            <!--Book an appointment-->
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-6 offset-md-3 border p-4 shadow bg-light">
                        <div class="col-12">
                            <h3 class="fw-normal text-secondary fs-4 text-uppercase mb-4">Appointment form</h3>
                        </div>
                        <form method="post" action="/patient-book-appointment/<%=user_id%>">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" placeholder="First Name" id="first_name" name="first_name">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" placeholder="Last Name" id="last_name" name="last_name">
                                </div>
                                <div class="col-md-6">
                                    <input type="tel" class="form-control" placeholder="Phone Number" id="phone_number" name="phone_number">
                                </div>
                                <div class="col-md-6">
                                    <input type="email" class="form-control" placeholder="Enter Email" id="enter_email" name="enter_email">
                                </div>
                                <div class="col-md-6">
                                    <input type="date" class="form-control" placeholder="Enter Date" id="enter_data" name="enter_date">
                                </div>
                                <div class="col-md-6">
                                    <input type="time" class="form-control" placeholder="Enter Time" id="enter_time" name="enter_time">
                                </div>
                                <div class="col-12">
                                    <select class="form-select">
                                        <option selected>Purpose Of Appointment</option>
                                        <option value="1">Routine Check-up</option>
                                        <option value="2">Blood Work</option>
                                        <option value="3">Not Feeling Well</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <textarea class="form-control" placeholder="Message"></textarea>
                                </div>
                                <div class="col-12 mt-5">                        
                                    <button type="submit" class="btn btn-primary float-end">Book Appointment</button>
                                    <button type="cancel" class="btn btn-outline-secondary float-end me-2">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Title -->

        
    </main>
    <!-- Main -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/echarts/echarts.min.js"></script>

    <!-- Template Main JS File -->
    <script src="/js/main.js"></script>


</body>

</html>